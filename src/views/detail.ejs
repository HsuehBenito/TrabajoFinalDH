<!DOCTYPE html>
<html>
  <%- include('./partials/head') %>
    <body> 

        <%- include('./partials/header') %>
        <main>
                    
                <div class="todo">
                    <div class="container page-wrapper">
                        <div class="page-inner ">
                          <div class="row detail-view">
                            <div class="el-wrapper ">
                              <div class="box-up">
                                <img class="img" src="/img/<%=producto.img%>" alt="">
                                <div class="img-info">
                                  <div class="info-inner">
                                    <span class="p-name"><p><%=producto.nombre%></p></span>
                                    
                                  </div>
                                  <div class="a-size"> Blend : <span class="discount"><%=producto.blend%></span></div>
                                </div>
                              </div>
                              <span class="p-company"><%=producto.descripcion%></span>
                      
                              <div class="box-down">
                                <div class="h-bg">
                                  <div class="h-bg-inner"></div>
                                </div>
                      
                                <a class="cart" href="#">
                                  <span class="price"><p>$<%=producto.precio%></p></span>
                                 
                                  <span class="add-to-cart">
                                    <span class="txt">Agregar a carrito</span>
                                  </span>
                                </a>
                              </div>
                            </div>
                          </div>
                        </div>
                      </a>
                      </div>
                      
                  </div>
                  <% if (locals.isLogged) { %>
                    <div class="button-container">
                      <div class="center">
                        <a href="/user/editar-producto/<%= producto.id %>" class="edit"><button type="button" class="btn btn-primary edit">Editar Producto</button></a>
                  
                        <form action="/user/delete/<%= producto.id %>?_method=DELETE" method="POST" >
                        <button type="submit" class="action-button btn btn-danger ">Borrar Producto</button>
                        </form>
                      </div>
                    </div>
                    <% } %>
        </main>
    </body>
</html>