<!DOCTYPE html>
<html>
  <%- include('./partials/head') %>
    <body> 

        <%- include('./partials/header') %>
        <main>
                    
                <div class="todo">
                  <% for (let i=0;i<p.length;i++) { %>
                    <div class="container page-wrapper">

                      <a href="/detail/<%=p[i].id%>">
                     
                        
                        
                        <div class="page-inner">
                          <div class="row">
                            <div class="el-wrapper">
                              <div class="box-up">
                                <img class="img" src="/img/<%=p[i].image%>" alt="">
                                <div class="img-info">
                                  <div class="info-inner">
                                    <span class="p-name"><p><%=p[i].name%></p></span>
                                  </div>
                                  <div class="a-size"> Descuentos : <span class="discount"><%=p[i].discount%>% OFF</span></div>
                                </div>
                              </div>
                      
                              <div class="box-down">
                                <div class="h-bg">
                                  <div class="h-bg-inner"></div>
                                </div>
                      
                                <a class="cart" href="#">
                                  <span class="price"><p>$<%=p[i].price%></p></span>
                                 
                                  <span class="add-to-cart">
                                    <span class="txt">Agregar a carrito</span>
                                  </span>
                                </a>
                              </div>
                            </div>
                          </div>
                        </div>
                      </a>
                      </div>
                      <% } %>
                    </div>
                    
        </main>
    </body>
</html>